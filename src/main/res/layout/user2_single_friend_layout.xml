<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="6dp"
        android:backgroundTint="#ffffff"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/single_user_profile_pic"
                android:layout_width="94dp"
                android:layout_height="89dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:background="@color/white"
                android:src="@drawable/avtar" />


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="98dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/single_display_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name: Display Name"
                        android:textColor="#646060"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/mutual_friends_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Mutual  Friends : 0"
                        android:textColor="#646060"
                        android:textSize="15dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/add_friend"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        app:cardBackgroundColor="#FAB333"
                        app:cardCornerRadius="20dp"
                        app:cardMaxElevation="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif"
                            android:text="Add Friend"
                            android:textColor="#2F3887"
                            android:textSize="24sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/view_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#FAB333"
                        app:cardCornerRadius="20dp"
                        app:cardMaxElevation="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:text="View Profile"
                            android:textColor="#2F3887"
                            android:textSize="24sp" />

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>