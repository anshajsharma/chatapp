<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#E2F3FB"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            app:cardCornerRadius="5dp"
            android:layout_gravity="center"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 AUG 2018"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:textSize="16sp"
                android:id="@+id/dateValue"
                android:textColor="#78886C"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_vertical"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="60dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/received_corner"
            android:layout_marginStart="2dp"
            android:layout_marginTop="-2dp"
            android:id="@+id/message_corner"
            android:layout_marginEnd="-14dp"
            android:rotation="270" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:id="@+id/cardView"
        android:backgroundTint="#ffffff"
        app:cardCornerRadius="7dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_file_download_black_24dp"
            android:layout_marginTop="100dp"
            android:id="@+id/download_image"
            android:layout_marginStart="100dp"
            android:visibility="gone"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:id="@+id/image"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                 android:layout_marginTop="4dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="2dp"
                android:textColor="#363636"
                android:id="@+id/message_body"
                android:paddingStart="5dp"
                android:paddingEnd="0dp"
                android:autoLink="phone|email|web"
                android:textColorLink="#190DAB"
                android:linksClickable="true"
                android:text="Received Messages"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:textColor="#78886C"
                android:id="@+id/messageTime"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:text="2:30 am"
                android:textSize="8sp"
                tools:ignore="RtlHardcoded" />


        </LinearLayout>


    </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>