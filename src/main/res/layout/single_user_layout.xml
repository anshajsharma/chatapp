<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="100dp">

    <androidx.cardview.widget.CardView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="7dp"
        android:id="@+id/cv"
        android:layout_marginStart="76dp"
        android:background="@color/white"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/online_check_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/online_image" />
    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_user_profile_pic"
        android:layout_width="94dp"
        android:layout_height="89dp"
        android:background="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/avtar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/single_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#646060"
            android:text="Name: Display Name" />

        <TextView
            android:id="@+id/single_user_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#646060"
            android:text="Status: Default" />
    </LinearLayout>

</RelativeLayout>