<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/colorPrimaryDark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pro_pic"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/avtar" />

        <TextView
            android:id="@+id/profile_display_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Display Name"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/currr_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/default_status"
            android:textAlignment="center"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/friends_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Friends Count"
            android:textAlignment="center"
            android:textColor="#DD1D1D"
            android:textSize="18dp" />

        <Button
            android:id="@+id/send_friend_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="Send Friend Request"
            android:textAlignment="center" />

        <Button
            android:id="@+id/decline_friend_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:text="Decline Friend Request"
            android:textAlignment="center" />
    </LinearLayout>


</RelativeLayout>