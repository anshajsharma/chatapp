<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChatActivity"></activity>
        <activity
            android:name=".RegisterAndLogin.MainScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MessagingService"
            android:enabled="false"
            android:exported="true" />

        <activity
            android:name=".UserProfileActivity"
            android:parentActivityName=".AllUsersActivity" />
        <activity
            android:name=".AllUsersActivity"
            android:parentActivityName=".UsersHomePage" />
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".StatusChangeActivity"
            android:label="New Status"
            android:parentActivityName=".SettingsActivity" />
        <activity
            android:name=".RegisterAndLogin.LoginActivity"
            android:label="Login"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".RegisterAndLogin.RegisterActivity"
            android:label="Register"
            android:parentActivityName=".RegisterAndLogin.LoginActivity" />
        <activity
            android:name=".UsersHomePage"
            android:label="Let&apos;s Chat"></activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <service android:name=".java.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>